@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --font-display: 'Playfair Display', serif;
    /* Use Inter as the primary UI body font for readability and consistent web stack */
    --font-body: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
    --background: 210 40% 98%;
    --foreground: 222 47% 11%;

    --card: 0 0% 100%;
    --card-foreground: 222 47% 11%;

    --popover: 0 0% 100%;
    --popover-foreground: 222 47% 11%;

    --primary: 246 80% 60%;
    --primary-foreground: 210 40% 98%;

    --secondary: 240 79% 67%;
    --secondary-foreground: 210 40% 98%;

    --muted: 210 40% 96%;
    --muted-foreground: 215 16% 47%;

    --accent: 262 83% 66%;
    --accent-foreground: 210 40% 98%;

    --destructive: 0 84% 60%;
    --destructive-foreground: 210 40% 98%;

    /* success and warning tokens used across the UI */
    --success: 145 63% 36%; /* approx for #10B981 */
    --warning: 42 96% 48%;  /* approx for #F59E0B */

    --border: 214 32% 91%;
    --input: 214 32% 91%;
    --ring: 246 80% 60%;

    --radius: 0.5rem;

    --sidebar-background: 0 0% 100%;
    --sidebar-foreground: 229 16% 18%;
    --sidebar-primary: 246 80% 60%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 240 5% 96%;
    --sidebar-accent-foreground: 229 16% 18%;
    --sidebar-border: 220 13% 91%;
    --sidebar-ring: 246 80% 60%;
  }

  /* dark mode overrides for success + warning if you want different shades */
  .dark {
    --success: 145 63% 36%;
    --warning: 42 96% 48%;
  }

  .dark {
    --background: 222 47% 11%;
    --foreground: 210 40% 98%;

    --card: 222 47% 11%;
    --card-foreground: 210 40% 98%;

    --popover: 222 47% 11%;
    --popover-foreground: 210 40% 98%;

    --primary: 246 80% 60%;
    --primary-foreground: 210 40% 98%;

    --secondary: 240 79% 67%;
    --secondary-foreground: 210 40% 98%;

    --muted: 217 33% 18%;
    --muted-foreground: 215 20% 65%;

    --accent: 262 83% 66%;
    --accent-foreground: 210 40% 98%;

    --destructive: 0 63% 31%;
    --destructive-foreground: 210 40% 98%;

    --border: 217 33% 18%;
    --input: 217 33% 18%;
    --ring: 246 80% 60%;

    --sidebar-background: 224 71% 4%;
    --sidebar-foreground: 210 40% 98%;
    --sidebar-primary: 246 80% 60%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 215 25% 27%;
    --sidebar-accent-foreground: 210 40% 98%;
    --sidebar-border: 215 25% 27%;
    --sidebar-ring: 246 80% 60%;
  }
}

@layer base {
  /* reset box sizing and remove problematic global border apply */
  *, *::before, *::after {
    box-sizing: border-box;
  }

  body {
    font-feature-settings: "rlig" 1, "calt" 1;
    font-family: var(--font-body), system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    background-color: hsl(var(--background));
    color: hsl(var(--foreground));
  }
}

@layer components {
  .dashboard-card {
    border-radius: var(--radius);
    border: 1px solid hsl(var(--border));
    background-color: hsl(var(--card));
    padding: 1rem;
    box-shadow: 0 1px 2px rgba(16, 24, 40, 0.04);
    transition: box-shadow 160ms ease;
  }
  .dashboard-card:hover {
    box-shadow: 0 8px 24px rgba(16, 24, 40, 0.06);
  }

  .stats-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    border-radius: var(--radius);
    border: 1px solid hsl(var(--border));
    background-color: hsl(var(--card));
    padding: 1rem;
    box-shadow: 0 1px 2px rgba(16, 24, 40, 0.04);
  }
}

/* Fallback utilities: ensure theme token classes exist even if Tailwind didn't generate them */
@layer utilities {
  .bg-card { background-color: hsl(var(--card)); }
  .bg-sidebar { background-color: hsl(var(--sidebar-background)); }
  .border-adsilo-border { border-color: hsl(var(--border)); }
  .text-adsilo-text-primary { color: hsl(var(--foreground)); }
  .text-adsilo-text-secondary { color: hsl(var(--muted-foreground)); }
  .text-adsilo-text-muted { color: hsl(var(--muted-foreground)); }
  .bg-adsilo-primary { background-color: hsl(var(--primary)); }
  .bg-adsilo-accent { background-color: hsl(var(--accent)); }
  .page-wrapper { padding-left: 1rem; padding-right: 1rem; margin-left: auto; margin-right: auto; max-width: 1200px; }
}